<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110sp"
            android:text="Aplikasi Android"
            android:textAlignment="center"
            android:textColor="#8A0A35"
            android:textSize="45sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnKonversiSuhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="80sp"
            android:layout_marginRight="20sp"
            android:backgroundTint="#D03066"
            android:text="Konversi Suhu"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnHitungBelanja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="20sp"
            android:backgroundTint="#F4749F"
            android:text="Menghitung Diskon Belanja"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnBangunRuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:backgroundTint="#F4749F"
            android:text="Bangun Ruang"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnBilangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:backgroundTint="#D03066"
            android:text="Jenis Bilangan"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>